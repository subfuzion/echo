{
  "name": "echo",
  "version": "0.0.2",
  "description": "A web app to send messages over WebSockets using echo.io",
  "scripts": {
    "start": "node app",
    "build-debug": "browserify -d -r ./client/scripts/echo.js:echo > public/js/echo.bundle.js",
    "build-min": "browserify -r ./client/scripts/echo.js:echo | uglifyjs > public/js/echo.bundle.min.js",
    "build": "npm run build-debug && npm run build-min",
    "watch": "watchify -d -r ./client/scripts/echo.js:echo -o public/js/echo.bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/tonypujals/echo.git"
  },
  "author": "Tony Pujals <tony@subfuzion.com> (http://twitter.com/subfuzion)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tonypujals/echo/issues"
  },
  "homepage": "https://github.com/tonypujals/echo.io",
  "dependencies": {
    "express": "3.1.0",
    "ejs": "*",
    "echo.io": "git://github.com/tonypujals/echo.io.git#v0.0.3"
  },
  "devDependencies": {
    "browserify": "^3.31.2",
    "watchify": "^0.6.1",
    "uglify-js": "^2.4.12"
  }
}
